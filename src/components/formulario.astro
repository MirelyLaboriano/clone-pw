---

import TituloVerde from '../components/titulo-verde.astro'
---
<TituloVerde titulo="Duplica tu dinero y asegura tu futuro financiero" />
<section class="flex fondo">
    <div class="max-w-screen-2xl mx-auto flex justify-between w-full my-10">
        <div class="w-[70%] hidden md:block"></div>
        <div class="mx-auto">
            <form class="flex-col bg-[#034251D4] m-5 rounded-lg pb-10">
                <div class="p-5 ">
                    <img class="w-[80%] mx-auto" src="https://images.leadconnectorhq.com/image/f_webp/q_85/r_1000/u_https://storage.googleapis.com/highlevel-backend.appspot.com/location/UqDWmG0WIwSpO945bPZ9/form/c3iPjqWWtd3i6uBY4qsJ/bc64ec20-9772-482f-bc07-09e927d67aca.png" alt="">
                </div>
                <ul class="">
                    <li>
                        <input type="text" placeholder="*Nombre" required autofocus />
                    </li>
                    <li>
                        <input type="text" maxlength="9" placeholder="*Celular" required/>
                    </li>
                    <li>
                        <textarea  placeholder="*consulta ..." required/>
                    </li>
                    <li>
                        <input type="submit" value="Enviar" class="" style="background-color: #f7a618; width:30%; padding:10px 0px;" >
                    </li>
                </ul>
            </form>
        </div>
        
    </div>
    
</section>

<style>
    .fondo{
        margin: 0;
        padding: 0;
        /* height: 100vh; */
        background: url("/portada.webp");
        /* background-image: url('tu-imagen.jpg'); Reemplaza 'tu-imagen.jpg' con la ruta de tu imagen */
        background-size: cover; 
        background-repeat: no-repeat; 
        background-position: center;
    }
    
    li{
        text-align: center;
        padding-top: 8px;
        padding-bottom: 8px;
        
        
    }
    li>input{
        background-color: #8eabb2;
        border-radius: 4px;
        width: 70%;
        padding: 7px;
    }
	li>input::placeholder{
		color: black;
	}

	li>textarea{
		background-color: #8eabb2;
		border-radius: 4px;
        width: 70%;
        padding: 7px;
	}
	li>textarea::placeholder{
		color: #000000;
	}
</style>